{
	"extends": "@vue/tsconfig/tsconfig.json",
	"include": [
		"env.d.ts",
		"src/**/*",
		"src/**/*.vue"
	],
	"compilerOptions": {
		"baseUrl": ".",
		"target": "es2022",
		"module": "es2022",
		"moduleResolution": "node",
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	},
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
